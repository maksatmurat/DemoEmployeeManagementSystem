@using Microsoft.AspNetCore.Components.Authorization
@using Client.ApplicationStates
@inject DepartmentState departmentState 
<AuthorizeView>
    <Authorized>
        <div class="top-row container-fluid ps-3 navbar ">
            <div class="container-fluid">
                <a class="navbar-brand" style=" color: var(--text-color) ">
                    Welcome, @context.User.Identity!.Name
                </a>
            </div>
        </div>

        <div class="nav-scrollable" style="align-self: start;">
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" href="/home/dashboard">
                        <span class="bi bi-house-door-fill fs-3  nav-menu" aria-hidden="true"></span>                             
                        <span style="padding-left:5px">Home</span>
                        
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" href="counter">
                        <span class="bi bi-plus-square-fill fs-3  nav-menu" aria-hidden="true"></span>
                        <span style="padding-left:5px">Counter</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" href="/contacts">
                        <span class="bi bi-arrows-angle-contract fs-3  nav-menu" aria-hidden="true"></span>
                        <span style="padding-left:5px">Contacts</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" @onclick="ShowAdminMenuContainer" style="color: var(--text-color); cursor: pointer" href="javascript:void()">
                        <div class="hstack gap-1">
                            <span class="bi bi-file-person-fill fs-3 text-center" aria-hidden="true"></span>
                            <span style="padding-left:5px">Administration</span>
                            <span class="@AdminIcon" style="padding-left:3px"></span>

                        </div>
                    </NavLink>
                    <a class="nav-link p-1" style="color:var(--text-color);margin-left:2rem;visibility:@CssStyle">
                        <div class="hstack">
                            <span class="bi bi-people fs-5 text-center" aria-hidden="true"></span>
                            <span  style="padding-left:5px">Users</span>
                        </div>
                    </a>
                </div>
                <div class="nav-item px-3" style="color:var(--text-color);margin-top:@DepartmentMargin">
                    <NavLink class="nav-link p-2" @onclick="ShowDepartmentContainer" style="cursor:pointer" href="javascript:void()">
                        <div class="hstack gap-1">
                            <span class="bi bi-backpack4-fill fs-3 text-center" aria-hidden="true"></span>
                            <span style="padding-left:5px">Department</span>
                            <span class="@DepartmentIcon" style="padding-left:3px"></span>
                        </div>
                    </NavLink>
                    <div class="nav-link p-2" style="margin-left:1rem;color:var(--text-color);visibility:@DepartmentCssStyle">
                        <ul class="list-group">
                            <li style="list-style:none" class="cursorStyle">
                                <a class="nav-link p-1" @onclick="GeneralDepartmentClicked">
                                    <div class="hstack">
                                        <span class="bi bi-file-medical fs-5 text-center" aria-hidden="true" ></span>
                                        <span  style="padding-left:6px">General</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none" class="cursorStyle">
                                <a class="nav-link p-1">
                                    <div class="hstack">
                                        <span class="bi bi-substack fs-5 text-center" aria-hidden="true" ></span>
                                        <span  style="padding-left:6px">Department</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none" class="cursorStyle">
                                <a class="nav-link p-1">
                                    <div class="hstack">
                                        <span class="bi bi-safe fs-5 text-center" aria-hidden="true"></span>
                                        <span  style="padding-left:6px">Branch</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

    </Authorized>
</AuthorizeView>

@code{
    private string AdminIcon => ShowHide ? "bi bi-sort-up-alt" : "bi bi-sort-down-alt";
    private string DepartmentIcon => ShowHideDepartment ? "bi bi-sort-up-alt" : "bi bi-sort-down-alt";
    public string DepartmentMargin { get; set; } = "-3.5rem";
    private string CssStyle = "hidden";
    public bool ShowHide { get; set; } = false;

    private void ShowAdminMenuContainer()
    {
        ShowHide = !ShowHide;
        if (ShowHide)
        {
            DepartmentMargin = "0";
            CssStyle = "visible";
        }
        else
        {
            DepartmentMargin = "-2.5rem";
            CssStyle = "hidden";
        }
    }
    private string DepartmentCssStyle = "hidden";
    public bool ShowHideDepartment { get; set; } = false;
    private void ShowDepartmentContainer()
    {
        ShowHideDepartment = !ShowHideDepartment;
        DepartmentCssStyle = ShowHideDepartment ? "visible" : "hidden";
    }
    void GeneralDepartmentClicked() {
        departmentState.GeneralDepartmentClicked(); 
    }
}

<style>


    .navbar {
        display: flex;
        justify-content: space-between;
        color: var(--text-color);
        background-color: cadetblue;
        top: -16px;
        padding: 1rem 0;
    }

    .nav-brand {
        font-weight: bold;
        font-size: 1.2rem;
    }

    .nav-toggle {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        display: none;
        cursor: pointer;
    }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 1rem;
        margin: 0;
        padding: 0;
    }

        .nav-links li a {
            color: var(--text-color);
            text-decoration: none;
        }

            .nav-links li a:hover {
                text-decoration: underline;
            }

    .content {
        padding: 2rem;
    }

    @@media (max-width: 768px) {
        .nav-toggle {
            display: block;
        }

        .nav-links {
            display: none;
            flex-direction: column;
            gap: 0.5rem;
            margin-top: 1rem;
            background-color: color-mix(in srgb, var(--bg-color) 50%, #b9a6b9 50%);
            padding: 1rem;
        }

            .nav-links.open {
                display: flex;
            }
    }
</style>
